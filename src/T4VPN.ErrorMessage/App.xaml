<Application x:Class="T4VPN.ErrorMessage.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="OnStart">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/T4VPN.Resource;Component/Styles/Colors.xaml"/>
                <ResourceDictionary Source="/T4VPN.Resource;component/Styles/Controls.xaml"/>
                <ResourceDictionary Source="/T4VPN.Resource;component/Styles/Window.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="Como Regular">/T4VPN.Resource;component/Fonts/#Como Regular</FontFamily>
            <Style TargetType="{x:Type Window}">
                <Setter Property="FontFamily" Value="{DynamicResource Como Regular}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
