<UserControl x:Class="T4VPN.Map.Views.MapLoad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:T4VPN.Views.Controls"
             mc:Ignorable="d"
             x:Name="MapLoadControl">
    <Grid>
        <Label Content="{Binding Load, ElementName=MapLoadControl}"
               FontSize="7"
               Foreground="White"
               Padding="0"
               Margin="1,-2,0,0"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"/>
        <Ellipse Stroke="White"
                 StrokeThickness="1"
                 Width="16"
                 Height="16"/>
        <local:CircularProgressBar VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Radius="8"
                                   Percentage="{Binding Load, ElementName=MapLoadControl}"
                                   StrokeThickness="2"
                                   SegmentColor="White"/>
    </Grid>
</UserControl>
