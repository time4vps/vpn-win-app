<UserControl x:Class="T4VPN.BugReporting.FailureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:icons="clr-namespace:T4VPN.Views.Icons"
             xmlns:resources="clr-namespace:T4VPN.Resources"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="TroubleshootButton" TargetType="Button" BasedOn="{StaticResource ClearStyleButton}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Command" Value="{Binding TroubleshootCommand}"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="{StaticResource ModalContentColor}">
        <StackPanel VerticalAlignment="Center">
            <icons:Failure
                Width="64"
                Height="64"
                Foreground="White"
                HorizontalAlignment="Center"/>
            <Label Content="{resources:Loc BugReport_msg_SendingFailed}"
                   FontSize="16"
                   Margin="0,20,0,0"
                   HorizontalAlignment="Center"
                   Foreground="White"/>
            <Button Style="{StaticResource TroubleshootButton}">
                <Underline>
                    <TextBlock Text="{resources:Loc BugReport_btn_Troubleshoot}"/>
                </Underline>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
