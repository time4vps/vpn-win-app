<modals:BaseModalWindow x:Class="T4VPN.Modals.Welcome.TrialWelcomeModalView"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:modals="clr-namespace:T4VPN.Modals"
                        xmlns:icons="clr-namespace:T4VPN.Views.Icons"
                        xmlns:welcome="clr-namespace:T4VPN.Modals.Welcome"
                        xmlns:resources="clr-namespace:T4VPN.Resources"
                        Style="{StaticResource BaseModalStyle}"
                        SizeToContent="Height"
                        Title="{resources:Loc Welcome_ttl_Trial}"
                        mc:Ignorable="d"
                        Height="Auto"
                        Width="800"
                        d:DataContext="{d:DesignInstance welcome:TrialWelcomeModalViewModel}">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" GradientStops="{StaticResource ModalBackground}"/>
        </Grid.Background>
        <icons:GiftBox Width="296" HorizontalAlignment="Right" Margin="0,0,-45,0" VerticalAlignment="Bottom"/>
        <StackPanel Margin="90,40">
            <TextBlock Text="{resources:Loc Welcome_lbl_TrialEnjoy}"
                       FontWeight="Medium"
                       Padding="15,0,15,25"
                       HorizontalAlignment="Center"
                       FontSize="40"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Foreground="White"/>

            <TextBlock Padding="15,5,15,0"
                       FontWeight="Medium"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       FontSize="18"
                       TextWrapping="Wrap"
                       LineHeight="30"
                       Text="{resources:Loc Welcome_lbl_TrialGift}"
                       Foreground="White"/>

            <StackPanel HorizontalAlignment="Center" Margin="0,40">
                <DockPanel>
                    <icons:Checkbox Width="20"/>
                    <Label Foreground="White" FontSize="18" Margin="8,5" FontWeight="Medium" Content="{resources:Loc Trial_Features_lbl_SecureCore}"/>
                </DockPanel>
                <DockPanel>
                    <icons:Checkbox Width="20"/>
                    <Label Foreground="White" FontSize="18" Margin="8,5" FontWeight="Medium" Content="{resources:Loc Trial_Features_lbl_P2PServers}"/>
                </DockPanel>
                <DockPanel>
                    <icons:Checkbox Width="20"/>
                    <Label Foreground="White" FontSize="18" Margin="8,5" FontWeight="Medium" Content="{resources:Loc Trial_Features_lbl_MultipleConnections}"/>
                </DockPanel>
                <DockPanel>
                    <icons:Checkbox Width="20"/>
                    <Label Foreground="White" FontSize="18" Margin="8,5" FontWeight="Medium" Content="{resources:Loc Trial_Features_lbl_MultipleCountries}"/>
                </DockPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button Style="{StaticResource SecondaryVividModalButton}"
                        Content="{resources:Loc Welcome_btn_Skip}"
                        Padding="15,0"
                        MinWidth="120"
                        Margin="15,0"
                        Command="{Binding CloseCommand}"/>
                <Button Style="{StaticResource PrimaryVividModalButton}"
                        Command="{Binding TakeATourCommand}"
                        Padding="15,0"
                        Margin="15,0"
                        Content="{resources:Loc Welcome_btn_TakeATour}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</modals:BaseModalWindow>
