<local:BaseModalWindow x:Class="T4VPN.Modals.OutdatedAppModalView"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:local="clr-namespace:T4VPN.Modals"
                        xmlns:resources="clr-namespace:T4VPN.Resources"
                        xmlns:controls="clr-namespace:T4VPN.Views.Controls"
                        xmlns:update="clr-namespace:T4VPN.Core.Update;assembly=T4VPN.Core"
                        xmlns:fa="http://schemas.fontawesome.io/icons/"
                        Style="{StaticResource BaseModalStyle}"
                        SizeToContent="Height"
                        Title="{resources:Loc Dialogs_ttl_Warning}"
                        mc:Ignorable="d"
                        Height="Auto"
                        Width="500"
                        d:DataContext="{d:DesignInstance local:OutdatedAppModalViewModel}">
    <local:BaseModalWindow.Resources>
        <Style x:Key="ErrorIcon" TargetType="fa:FontAwesome">
            <Setter Property="Icon" Value="ExclamationTriangle"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
            <Setter Property="Visibility" Value="Collapsed"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Update.Status}" Value="{x:Static update:UpdateStatus.CheckFailed}">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Update.Status}" Value="{x:Static update:UpdateStatus.DownloadFailed}">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="UpdateButton" TargetType="Button" BasedOn="{StaticResource PrimaryModalButton}">
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Update.Status}" Value="{x:Static update:UpdateStatus.CheckFailed}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Update.Status}" Value="{x:Static update:UpdateStatus.DownloadFailed}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Update.Ready}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ManualUpdateButton" TargetType="Button" BasedOn="{StaticResource PrimaryModalButton}">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Setter Property="ToolTip" Value="{resources:Loc Dialogs_OutdatedApp_lbl_Error}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Update.Status}" Value="{x:Static update:UpdateStatus.CheckFailed}">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Update.Status}" Value="{x:Static update:UpdateStatus.DownloadFailed}">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Update.Ready}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="UpdateButtonLabel" TargetType="Label">
            <Setter Property="Content" Value="{resources:Loc Dialogs_OutdatedApp_lbl_Update}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Update.Status}" Value="{x:Static update:UpdateStatus.Checking}">
                    <Setter Property="Content" Value="{resources:Loc Dialogs_OutdatedApp_lbl_Downloading}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Update.Status}" Value="{x:Static update:UpdateStatus.Downloading}">
                    <Setter Property="Content" Value="{resources:Loc Dialogs_OutdatedApp_lbl_Downloading}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Update.Ready}" Value="True">
                    <Setter Property="Content" Value="{resources:Loc Dialogs_OutdatedApp_lbl_Update}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </local:BaseModalWindow.Resources>
    <StackPanel>
        <StackPanel Margin="20,50">
            <TextBlock TextWrapping="Wrap" Padding="0" FontSize="16" Foreground="White" Text="{resources:Loc Dialogs_OutdatedApp_msg}"/>
            <TextBlock TextWrapping="Wrap"
                       Margin="0,10,0,0"
                       Padding="0"
                       FontSize="16"
                       Foreground="White"
                       Text="{resources:Loc Dialogs_OutdatedApp_msg_KillSwitchActive}"
                       Visibility="{Binding KillSwitchEnabled, Converter={StaticResource BoolToVis}}"/>
        </StackPanel>

        <DockPanel Background="{StaticResource ModalBarColor}" Height="66">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource SecondaryModalButton}"
                        Command="{Binding CloseCommand}"
                        Content="{resources:Loc Dialogs_OutdatedApp_btn_Quit}"/>
                <Button Style="{StaticResource UpdateButton}"
                        Command="{Binding Update.UpdateCommand}">
                    <DockPanel>
                        <Label Style="{StaticResource UpdateButtonLabel}" Foreground="White"/>
                    </DockPanel>
                </Button>
                <Button Style="{StaticResource ManualUpdateButton}"
                        Command="{Binding UpdateManuallyCommand}">
                    <DockPanel>
                        <fa:FontAwesome Style="{StaticResource ErrorIcon}"/>
                        <Label Content="{resources:Loc Dialogs_OutdatedApp_lbl_UpdateManually}" Foreground="White"/>
                    </DockPanel>
                </Button>
            </StackPanel>
        </DockPanel>
    </StackPanel>
</local:BaseModalWindow>
