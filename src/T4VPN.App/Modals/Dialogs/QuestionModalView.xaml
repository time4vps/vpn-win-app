<local:BaseModalWindow x:Class="T4VPN.Modals.Dialogs.QuestionModalView"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="clr-namespace:T4VPN.Modals"
                       xmlns:behavior="clr-namespace:T4VPN.Core.Wpf.Behavior"
                       xmlns:dialogs="clr-namespace:T4VPN.Modals.Dialogs"
                       xmlns:resources="clr-namespace:T4VPN.Resources"
                       Style="{StaticResource BaseModalStyle}"
                       mc:Ignorable="d"
                       Title="{resources:Loc Dialogs_ttl_Question}"
                       ResizeMode="NoResize"
                       SizeToContent="Height"
                       Height="Auto"
                       Width="500"
                       d:DataContext="{d:DesignInstance dialogs:QuestionModalViewModel}">
    <Grid>
        <StackPanel>
            <TextBlock TextWrapping="Wrap"
                       behavior:TextStyleBehavior.FormattedText="{Binding Message}"
                       Padding="20,50"
                       FontSize="16"
                       Foreground="White"/>
            <DockPanel Background="{StaticResource ModalBarColor}" Height="66">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource SecondaryModalButton}"
                            Command="{Binding CloseCommand}"/>
                    <Button Style="{StaticResource PrimaryModalButton}"
                            Command="{Binding ContinueCommand}"
                            AutomationProperties.AutomationId="{StaticResource ContinueButtonId}"
                            Content="{Binding PrimaryButtonText}"/>
                </StackPanel>
            </DockPanel>
        </StackPanel>
    </Grid>
</local:BaseModalWindow>
