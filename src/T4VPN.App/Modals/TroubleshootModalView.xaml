<local:BaseModalWindow x:Class="T4VPN.Modals.TroubleshootModalView"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                        xmlns:local="clr-namespace:T4VPN.Modals"
                        xmlns:resources="clr-namespace:T4VPN.Resources"
                        xmlns:behavior="clr-namespace:T4VPN.Core.Wpf.Behavior"
                        Style="{StaticResource BaseModalStyle}"
                        SizeToContent="Height"
                        Title="{resources:Loc Dialogs_Troubleshoot_ttl}"
                        mc:Ignorable="d"
                        Height="Auto"
                        Width="500"
                        d:DataContext="{d:DesignInstance local:TroubleshootModalViewModel}">
    <local:BaseModalWindow.Resources>
        <Style x:Key="SolutionText" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="30,5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="BlockedByGovText" BasedOn="{StaticResource SolutionText}" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding DoHEnabled}" Value="True">
                    <Setter Property="behavior:TextStyleBehavior.FormattedText" Value="{resources:Loc Dialogs_Troubleshooting_msg_GovBlock}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding DoHEnabled}" Value="False">
                    <Setter Property="behavior:TextStyleBehavior.FormattedText" Value="{resources:Loc Dialogs_Troubleshooting_msg_GovBlockDoH}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </local:BaseModalWindow.Resources>
    <StackPanel>
        <TextBlock VerticalAlignment="Top"
                   Margin="30,20,30,5"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Foreground="White"
                   FontSize="16"
                   behavior:TextStyleBehavior.FormattedText="{resources:Loc Dialogs_Troubleshooting_msg_Title}"/>
        <ScrollViewer Height="400" Template="{StaticResource DarkScrollViewerControlTemplate}">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Style="{StaticResource SolutionText}"
                           behavior:TextStyleBehavior.FormattedText="{resources:Loc Dialogs_Troubleshooting_msg_AlternativeRouting}"/>
                    </StackPanel>
                    <CheckBox Margin="0,0,30,0"
                      Grid.Column="1"
                      HorizontalAlignment="Center"
                      Style="{StaticResource ToggleSwitch}"
                      IsChecked="{Binding DoHEnabled}"
                      AutomationProperties.AutomationId="{StaticResource StartWithWindowsCheckbox}"/>
                </Grid>

                <TextBlock Style="{StaticResource SolutionText}"
                   behavior:TextStyleBehavior.FormattedText="{resources:Loc Dialogs_Troubleshooting_msg_NoInternet}"/>
                <TextBlock Style="{StaticResource SolutionText}"
                   behavior:TextStyleBehavior.FormattedText="{resources:Loc Dialogs_Troubleshooting_msg_IspProblem}"/>
                <TextBlock Style="{StaticResource BlockedByGovText}"/>
                <TextBlock Style="{StaticResource SolutionText}"
                   behavior:TextStyleBehavior.FormattedText="{resources:Loc Dialogs_Troubleshooting_msg_Antivirus}"/>
                <TextBlock Style="{StaticResource SolutionText}"
                   behavior:TextStyleBehavior.FormattedText="{resources:Loc Dialogs_Troubleshooting_msg_Firewall}"/>
                <TextBlock Style="{StaticResource SolutionText}"
                   behavior:TextStyleBehavior.FormattedText="{resources:Loc Dialogs_Troubleshooting_msg_Time4VPSDown}"/>
                <TextBlock Style="{StaticResource SolutionText}"
                   behavior:TextStyleBehavior.FormattedText="{resources:Loc Dialogs_Troubleshooting_msg_Unknown}"/>
            </StackPanel>
        </ScrollViewer>
        <DockPanel Background="{StaticResource ModalBarColor}" Height="66">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource PrimaryModalButton}"
                        Command="{Binding CloseCommand}"
                        Content="{resources:Loc Dialogs_Troubleshooting_btn_Close}"/>
            </StackPanel>
        </DockPanel>
    </StackPanel>
</local:BaseModalWindow>