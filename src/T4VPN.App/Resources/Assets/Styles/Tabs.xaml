<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="TabControlBackground" Color="#34343d"/>
    <SolidColorBrush x:Key="TabItemBackground" Color="#24242b"/>
    <SolidColorBrush x:Key="TabItemForeground" Color="Gray"/>
    <SolidColorBrush x:Key="SelectedTabItemBackground" Color="#34343d"/>
    <SolidColorBrush x:Key="SelectedTabItemForeground" Color="White"/>

    <LinearGradientBrush x:Key="TabOpacityMaskStart" StartPoint="1,0" EndPoint="0,0">
        <GradientStop Color="#FFFFFFFF" Offset="0"/>
        <GradientStop Color="#FFFFFFFF" Offset="0.5"/>
        <GradientStop Color="#00FFFFFF" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="TabOpacityMaskEnd" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FFFFFFFF" Offset="0"/>
        <GradientStop Color="#FFFFFFFF" Offset="0.5"/>
        <GradientStop Color="#00FFFFFF" Offset="1"/>
    </LinearGradientBrush>
    <Style x:Key="TabItemPath" TargetType="{x:Type Path}">
        <Style.Setters>
            <Setter Property="Data" Value="M0,0 C0,0 17.926,0 23.5,20.4 C28.8,39 40,40 45.7,40 C50,40 0,40 0,40 L0,0 Z"/>
        </Style.Setters>
    </Style>
    <TransformGroup x:Key="FlipHorizontallyTransform">
        <ScaleTransform ScaleY="1" ScaleX="-1"/>
        <SkewTransform AngleY="0" AngleX="0"/>
        <RotateTransform Angle="0"/>
        <TranslateTransform/>
    </TransformGroup>

    <Style TargetType="{x:Type TabControl}">
        <Setter Property="Background" Value="{StaticResource TabControlBackground}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabControl}">
                    <Grid KeyboardNavigation.TabNavigation="Local">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="Transparent">
                            <UniformGrid x:Name="HeaderPanel"
                                         IsItemsHost="True"
                                         Rows="1"
                                         Panel.ZIndex="1"
                                         KeyboardNavigation.TabIndex="1"
                                         Background="Transparent"/>
                        </Border>
                        <Border
                            Grid.Row="1"
                            KeyboardNavigation.TabNavigation="Local"
                            KeyboardNavigation.DirectionalNavigation="Contained"
                            KeyboardNavigation.TabIndex="2"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding Border.CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="PART_SelectedContentHost" ContentSource="SelectedContent"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style TargetType="{x:Type TabItem}">
        <Setter Property="Foreground" Value="{StaticResource TabItemForeground}"/>
        <Setter Property="Background" Value="{StaticResource TabItemBackground}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabItem}">
                    <Grid Margin="-17,0,-17,0">
                        <Border Name="LeftShadow" Background="{TemplateBinding Background}" HorizontalAlignment="Left" Width="0" OpacityMask="{StaticResource TabOpacityMaskStart}"></Border>
                        <Grid Cursor="Hand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Path Grid.Column="0" Name="LeftPath" Margin="0" 
                                  Style="{StaticResource TabItemPath}"
                                  Fill="{TemplateBinding Background}"
                                  RenderTransformOrigin="0.5,0.5"
                                  RenderTransform="{StaticResource FlipHorizontallyTransform}"/>
                            <Border Grid.Column="1" Name="Border" 
                                    BorderThickness="0" 
                                    Background="{TemplateBinding Background}">
                                <Label Name="Label" BorderThickness="0" Padding="{TemplateBinding Padding}" 
                                       VerticalContentAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                                       Foreground="{TemplateBinding Foreground}">
                                    <ContentPresenter x:Name="ContentSite" ContentSource="Header" RecognizesAccessKey="True"/>
                                </Label>
                            </Border>
                            <Path Grid.Column="2" Name="RightPath" Margin="0" 
                                  Style="{StaticResource TabItemPath}"
                                  Fill="{TemplateBinding Background}"/>
                        </Grid>
                        <Border Name="RightShadow" Background="{TemplateBinding Background}" HorizontalAlignment="Right" Width="0" OpacityMask="{StaticResource TabOpacityMaskEnd}"></Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Label" Property="Foreground" Value="{StaticResource SelectedTabItemForeground}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="LeftShadow" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="LeftPath" Property="Fill" Value="{StaticResource SelectedTabItemBackground}"/>
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource SelectedTabItemBackground}"/>
                            <Setter TargetName="Label" Property="Foreground" Value="{StaticResource SelectedTabItemForeground}"/>
                            <Setter TargetName="RightPath" Property="Fill" Value="{StaticResource SelectedTabItemBackground}"/>
                            <Setter TargetName="RightShadow" Property="Visibility" Value="Visible"/>
                            <Setter Property="Panel.ZIndex" Value="1"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding Converter={StaticResource TabIndexToFirstLastConverter}, RelativeSource={RelativeSource Self}}" Value="First">
                            <Setter TargetName="LeftPath" Property="Data" Value="M 0,0 H 45 V 40 H 0 Z" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Converter={StaticResource TabIndexToFirstLastConverter}, RelativeSource={RelativeSource Self}}" Value="Last">
                            <Setter TargetName="RightPath" Property="Data" Value="M 0,0 H 45 V 40 H 0 Z" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
