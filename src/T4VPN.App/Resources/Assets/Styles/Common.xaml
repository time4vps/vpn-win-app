<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ColumnHeading" TargetType="Label">
        <Setter Property="Padding" Value="0,12,0,10"/>
        <Setter Property="Foreground" Value="#777783"/>
        <Setter Property="FontWeight" Value="ExtraBold"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style x:Key="ColumnTitle" TargetType="Label">
        <Setter Property="Padding" Value="0,10"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style x:Key="FirstColumnTitle" TargetType="Label" BasedOn="{StaticResource ColumnTitle}">
        <Setter Property="Padding" Value="0"/>
    </Style>

    <Style x:Key="ColumnValue" TargetType="TextBlock">
        <Setter Property="Padding" Value="0,2"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <Style x:Key="Row" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="MainColumn" TargetType="Panel">
        <Setter Property="Margin" Value="40,15,20,15"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <Style TargetType="Hyperlink">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
    </Style>

</ResourceDictionary>